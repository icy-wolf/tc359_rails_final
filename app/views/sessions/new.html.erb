<div class="col-lg-6">
  <h1>Log In</h1>
  <%= simple_form_for :user, :url => sessions_path do |f| %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.button :submit, "Login" %>
  <% end %>
</div>
<div class="col-lg-6">
<h1>Register</h1>
  <%= simple_form_for @user do |f| %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.button :submit, "Register" %>
  <% end %>
</div>